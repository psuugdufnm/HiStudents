<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#b13434"
                android:centerColor="#b13434"
                android:endColor="#b13434"
                android:type="linear"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#94d7bf"/>
            <gradient
                android:startColor="#e88175"
                android:centerColor="#e88175"
                android:endColor="#e88175"
                android:type="linear"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#e88175"
                android:centerColor="#e88175"
                android:endColor="#e88175"
                android:type="linear"/>
        </shape>
    </item>

</selector>