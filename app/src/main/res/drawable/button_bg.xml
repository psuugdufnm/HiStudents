<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ff00B586"
                android:centerColor="#ff00B586"
                android:endColor="#ff00B586"
                android:type="linear"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#ff00B586"/>
            <gradient
                android:startColor="#ff00B586"
                android:centerColor="#ff00B586"
                android:endColor="#ff00B586"
                android:type="linear"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ff00B586"
                android:centerColor="#ff00B586"
                android:endColor="#ff00B586"
                android:type="linear"/>
        </shape>
    </item>

</selector>